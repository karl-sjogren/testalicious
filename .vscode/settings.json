{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bin": true,
        "**/obj": true,
        "**/dist": true,
        "**/tmp": true
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[csharp]": {
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[handlebars]": {
        "editor.tabSize": 2
    },
    "[less]": {
        "editor.tabSize": 2
    },
    "[sql]": {
        "editor.tabSize": 4
    },
    "eslint.packageManager": "yarn",
    "eslint.enable": true,
    "eslint.workingDirectories": ["./src/Testalicious.Frontend/"],
    "css.validate": false,
    "less.validate": false,
    "stylelint.enable": true,
    "dotnet-test-explorer.testProjectPath": "./test/**/*.csproj",
    "dotnet-test-explorer.showCodeLens": true,
    "dotnet-test-explorer.addProblems": true,
    "debug.internalConsoleOptions": "neverOpen",
    "azureFunctions.preDeployTask": "publish",
    "jshint.enable": false
}